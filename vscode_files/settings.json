    "pasteImage.showFilePathConfirmInputBox": true, // Show file path confirm input box
    // Other settings
    "editor.inlineSuggest.enabled": true, // Enable inline suggestions
    "codestream.serverUrl": "https://api.codestream.com", // Set Codestream server URL
