    // CodeGPT settings
    "CodeGPT.model": "gpt-4", // Set CodeGPT model to GPT-4
    "CodeGPT.maxTokens": 5000, // Set max tokens for CodeGPT
    "CodeGPT.temperature": 0.4, // Set temperature for CodeGPT
    // Markdown settings
    "[markdown]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode" // Set default formatter for Markdown files
    },
    // Markdown Preview Enhanced settings
    "markdown-preview-enhanced.liveUpdate": true, // Enable live update for Markdown preview
